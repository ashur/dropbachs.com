{
  "name": "create-static",
  "private": true,
  "scripts": {
    "build": "npm run build-html && npm run build-js && npm run build-scss",
    "build-html": "cp -R src/html/ dist/",
    "build-js": "browserify src/js/main.js -o dist/main.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "build-scss": "node-sass --output-style compressed -o dist src/scss",
    "clean": "rm -r dist && mkdir dist",
    "serve": "serve dist",
    "test": "mocha test/**/*.js",
    "watch-html": "onchange 'src/html/**/*.html' -- npm run build-html",
    "watch-js": "onchange 'src/js/**/*' -- npm run build-js",
    "watch-scss": "onchange 'src/scss/**/*.scss' -- npm run build-scss",
    "watch": "npm run build && concurrently -n serve,html,js,scss \"npm:serve\" \"npm:watch-html\" \"npm:watch-js\" \"npm:watch-scss\""
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babelify": "^10.0.0",
    "browserify": "^13.0.1",
    "concurrently": "^4.0.1",
    "eslint": "^5.6.1",
    "node-sass": "^4.9.3",
    "onchange": "^4.1.0",
    "serve": "^10.0.1"
  }
}
